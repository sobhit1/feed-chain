root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# 4 spaces for indentation by default
indent_style = space
indent_size = 4
tab_width = 4

# Max line length
max_line_length = 120

# Java files
[*.java]
indent_style = space
indent_size = 4
continuation_indent_size = 8
insert_final_newline = true
trim_trailing_whitespace = true

# XML files (pom.xml, Spring config, etc)
[*.xml]
indent_style = space
indent_size = 2

# YAML files
[*.yml]
indent_style = space
indent_size = 2

# Properties files
[*.properties]
indent_style = space
indent_size = 4

# Markdown files
[*.md]
trim_trailing_whitespace = false
insert_final_newline = true

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Scripts (shell, bash)
[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf

# Ignore compiled files
[*.class]
indent_style = ignore

[*.jar]
indent_style = ignore
