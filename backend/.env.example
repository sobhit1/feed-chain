# ============================================================
# SERVER CONFIGURATION
# ============================================================

PORT=8080
APP_NAME=FeedChain
APP_ENV=development
BASE_URL=http://localhost:8080

# ============================================================
# DATABASE CONFIGURATION
# ============================================================

MONGO_URI=mongodb+srv://<username>:<password>@<your-cluster>.mongodb.net/feedchain?retryWrites=true&w=majority
MONGO_DB_NAME=feedchain

# ============================================================
# REDIS CONFIGURATION
# ============================================================

REDIS_HOST=redis-xxxxx.upstash.io
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# ============================================================
# CLOUDINARY CONFIGURATION
# ============================================================

CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ============================================================
# JWT ASYMMETRIC (RSA) CONFIGURATION
# ============================================================

JWT_PRIVATE_KEY_LOCATION=classpath:keys/private.pem
JWT_PUBLIC_KEY_LOCATION=classpath:keys/public.pem
JWT_ACCESS_TOKEN_EXPIRATION_MS=900000
JWT_REFRESH_TOKEN_EXPIRATION_MS=604800000
JWT_ALGORITHM=RS256

# ============================================================
# OAUTH2 CONFIGURATION (GOOGLE)
# ============================================================

OAUTH_GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
OAUTH_GOOGLE_CLIENT_SECRET=your_google_client_secret
OAUTH_GOOGLE_REDIRECT_URI=http://localhost:8080/api/v1/auth/google/callback

# ============================================================
# MAIL CONFIGURATION
# ============================================================

MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email_address
MAIL_PASSWORD=your_email_app_password
MAIL_FROM_NAME=FeedChainSupport
MAIL_FROM_ADDRESS=your_email_address
